NAME1 = *.c

NAME2 = *.o 

NAME3 = libft.a


$(NAME):	
	@gcc -Wall -Wextra -Werror -I ./ -c $(NAME1)
	@ar rc $(NAME3) $(NAME2)

all: $(NAME)
	
clean:
	@rm -f $(NAME2) 

fclean: clean
	@rm -f $(NAME3)
		
re: fclean all



	

	

	
	

	

